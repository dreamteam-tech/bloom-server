{
  "name": "@dreamteam/bloom-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./serverApollo.js",
    "sequelize": "./node_modules/.bin/sequelize",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test-coverage": "NODE_ENV=test jest --coverage --detectOpenHandles"
  },
  "dependencies": {
    "apollo-server": "^2.2.5",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.3",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.1",
    "pg": "^7.4.3",
    "raven": "^2.0.1",
    "sequelize": "^4.3.0",
    "sequelize-cli": "^4.1.1"
  },
  "devDependencies": {
    "jest": "^23.4.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "supertest": "^3.2.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTestsFramework.js",
    "testEnvironment": "node",
    "bail": true,
    "verbose": true,
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)",
      "**/test/**/*.js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.+/helpers/",
      "/config/"
    ]
  }
}
